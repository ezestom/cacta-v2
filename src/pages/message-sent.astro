---
import Layout from "../layouts/Layout.astro";
import success from "../icons/success.svg";

const { currentLocale } = Astro;
import { geti18n } from "../i18n/index.ts";

const i18n = geti18n({ currentLocale });
const { status, paragraph, button } = i18n.MESSAGE_SENT;
---

<Layout title="Mensaje enviado">
	<section class="h-screen flex items-center justify-center px-4 relative">
		<article class="rounded-3xl shadow-2xl text-white">
			<div class="p-12 text-center">
				<p
					class="text-base font-normal flex gap-2 items-center justify-center">
					{status}
					<img src={success.src} alt="success icon" class="w-5" />
				</p>

				<p
					class="text-base font-normal flex gap-2 items-center justify-center pt-4">
					{paragraph}
				</p>

				<a
					class="inline-flex h-full w-full cursor-pointer items-center justify-center rounded-xl bg-gradient-to-r from-[#007d67] to-[#00ff9a] py-2 font-medium text-md text-white backdrop-blur-3xl hover:scale-105 transition mt-6"
					href="https://cacta.eco/">
					{button}
				</a>
			</div>
		</article>
	</section>
</Layout>
<style>
	section {
		position: relative; /* Necesario para que el pseudo-elemento se posicione relativamente al section */
		overflow: hidden; /* Para asegurarse de que el pseudo-elemento no sobresalga del section */
	}
	
	section::before {
		background-color: #fafafa;
		margin-block: 4rem;
		content: ""; /* Necesario para mostrar el pseudo-elemento */
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: url("../img/logo-negro.png");
		background-size: contain;
		background-position: bottom;
		background-repeat: no-repeat;
		opacity: 0.03; /* Ajusta la opacidad aquí */
		z-index: -1; /* Coloca el pseudo-elemento detrás del contenido del section */
	}
	article {
		background-color: rgba(0, 0, 0, 0.5);
	}
</style>

---
import { CardZoom2 } from "../../components/CardZoom/CardZoom2";
import Layout from "../../layouts/Layout.astro";
import eco from "../../img/eco-score.png";
import image2 from "../../img/declaraciones.png";
import GoBack from "../../components/GoBack.astro";

import { getLangFromUrl, useTranslatedPath } from "../../i18n/utils";

const { currentLocale } = Astro;
import { geti18n } from "../../i18n/index.ts";

const i18n = geti18n({ currentLocale });
const {
	title_description_3_1,
	description_3_1,
	title_description_3_2,
	description_3_2,
} = i18n.SECTION_FEATURES;
---

<Layout title="Reportes EPD 🍃">
	<section
		class="w-screen h-full md:h-screen flex items-center justify-center"
		id="section">
		<div
			aria-hidden="true"
			class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20 -z-10">
			<div
				class="blur-[106px] h-[20rem] bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700">
			</div>
			<div
				class="blur-[106px] h-32 bg-gradient-to-r from-secondary to-tertiary dark:to-indigo-600">
			</div>
		</div>
		<div class="absolute h-full w-full">
			<div
				class="absolute h-full w-full bg-[radial-gradient(#ccc_1px,transparent_1px)] dark:bg-[radial-gradient(rebeccapurple_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]">
			</div>
		</div>
		<aside
			class="grid grid-cols-1 md:grid-cols-2 my-20 md:my-0 gap-6 px-0 md:px-12">
			<CardZoom2
				icon=""
				client:visible
				image={eco.src}
				title={title_description_3_1}
				description={description_3_1}
				video1=""
			/>

			<CardZoom2
				icon=""
				client:visible
				image={image2.src}
				title={title_description_3_2}
				description={description_3_2}
				video1=""
			/>
		</aside>
		<GoBack />
	</section>
</Layout>

<style>
	.dark {
		background-color: #111826;
		z-index: -10;
	}
	.light {
		background-color: #fafafa;
		z-index: -10;
	}
</style>

<script>
	const section = document.getElementById("section");
	if (localStorage.getItem("theme") === "dark") {
		section?.classList.add("dark");
	} else {
		section?.classList.remove("dark");
	}
</script>

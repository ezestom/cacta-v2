---
import card1 from "../img/slider1.webp";
import card2 from "../img/slider2.webp";
import card3 from "../img/slider3.webp";
import card4 from "../img/slider4.webp";
import card5 from "../img/slider5.webp";
import card6 from "../img/slider6.webp";
---

<div
  id="gallery"
  class="relative w-full md:w-[515px] pt-8 md:pt-none max-w-1/2 h-[350px] md:h-auto z-0"
  data-carousel="slide"
>
  <!-- Carousel wrapper -->
  <div
    class="relative h-full overflow-hidden rounded-[3rem]  shadow-md border"
  >
    <!-- Item 1 -->
    <div
      class="hidden duration-700 pbject-cover ease-in-out"
      data-carousel-item
    >
      <img
        src={card1.src}
        class="absolute block object-cover max-w-full h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
        alt=`card-image-${card1}`
      />
    </div>
    <!-- Item 2 -->
    <div
      class="hidden duration-700 pbject-cover ease-in-out"
      data-carousel-item="active"
    >
      <img
        src={card2.src}
        class="absolute block object-cover max-w-full h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
        alt=`card-image-${card2}`
      />
    </div>
    <!-- Item 3 -->
    <div
      class="hidden duration-700 pbject-cover ease-in-out"
      data-carousel-item="active"
    >

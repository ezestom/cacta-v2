<style>
  .container-video {
    width: 100%;
    border-bottom-left-radius: 10% 5%;
    border-bottom-right-radius: 10% 5%;
    box-shadow: 0 0 20px 10px rgba(0, 0, 0, 0.2);
    animation: fadeOut linear both;
    animation-timeline: view();
    animation-range: 55% 85%;
  }
  .bg-image {
    mask: radial-gradient(circle at right, white 50%, transparent 100%);
    border-bottom-left-radius: 10% 5%;
    border-bottom-right-radius: 10% 5%;
    /* box shadow botton */
  }
  @media (width >= 768px) {
    @keyframes fadeOut {
      to {
        opacity: 0;
      }
    }
  }
</style>

---
import Container from "./Container.astro";
import { BlurVideo } from "../components/BlurVideo/BlurVideo.jsx";
import bg from "../icons/bg.svg";
import arrow from "../icons/arrows.svg";
---

<div class="" id="home">
  <div
    aria-hidden="true"
    class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20 -z-10"
  >
    <div
      class="blur-[106px] h-56 bg-gradient-to-br from-primary to-secondary dark:from-secondary -z-10"
    >
    </div>
    <!-- <div class="blur-[106px] h-32 bg-gradient-to-r from--400 to-primary-300 dark:to-secondary-600"></div> -->
  </div>
  <Container>
    <div class="pt-48 ml-auto">
      <div class="text-center m-auto top-0 bottom-0">
        <section class="flex justify-between w-full items-start flex-wrap">
          <div class="w-full md:w-1/3 relative">
            <img
              class="absolute w-auto md:max-w-[150%] let-0 top-0 bottom-0 m-auto"
              src={bg.src}
              alt="bg svg"
            />
            <h1
              class="text-gray-900 dark:text-white font-bold text-start text-3xl md:text-4xl xl:text-7xl"
            >
              Más que un <span
                class="text-primary dark:text-white text-3xl md:text-4xl xl:text-8xl"
                >Software</span
              >
              <p
                class="text-gra-900 dark:text-white text-3xl md:text-4xl xl:text-4xl"
              >
                La puerta al futuro de<br /> la industria agrícola
              </p>
            </h1>

            <p class="mt-8 text-gray-700 dark:text-gray-300 text-start">
              Automatiza, calcula y reporta el impacto <br /> ambiental de tu empresa
            </p>
          </div>
          <div class="w-2/3 flex justify-end">
            <BlurVideo client:visible />
          </div>
        </section>


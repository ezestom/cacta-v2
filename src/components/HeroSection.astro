        <div
          class="hidden py-4 mt-16 border-y border-gray-100 dark:border-gray-800 sm:flex justify-between"
        >
          <div class="grid items-center">
            <h6 class="text-lg font-semibold text-gray-700 dark:text-white">
              Automatiza
            </h6>
            <p
              class="bg-gradient-to-r from-[#030f33] to-[#4e737a] text-center py-2 px-4 rounded-full font-semibold text-white mx-auto"
            >
              1
            </p>
          </div>
          <img src={arrow.src} alt="arrow icon" />
          <div class="grid items-center">
            <h6 class="text-lg font-semibold text-gray-700 dark:text-white">
              Calcula
            </h6>
            <p
              class="bg-gradient-to-r from-[#030f33] to-[#4e737a] text-center py-2 px-4 rounded-full font-semibold text-white mx-auto"
            >
              2
            </p>
          </div>
          <img src={arrow.src} alt="arrow icon" />
          <div class="grid items-center">
            <h6 class="text-lg font-semibold text-gray-700 dark:text-white">
              Reporta
            </h6>
            <p

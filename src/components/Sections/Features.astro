---
import Card from "../Card.astro";
import Container from "../Container.astro";
import leaf from "../../icons/leaf.svg";
import shield from "../../icons/shield.svg";
import eco from "../../icons/eco.svg";

import { geti18n } from "../../i18n/";
const { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });

const {
	title,
	intro_1,
	intro_2,
	title_description_1,
	title_description_2,
	title_description_3,
} = i18n.SECTION_FEATURES;
---

<div id="features" class="py-20 relative">
	<Container>
		<div class="md:w-2/3 lg:w-1/2">
			<h2
				class="my-4 text-2xl font-bold text-white dark:text-white md:text-4xl">
				{title}
			</h2>
			<p
				class="my-2 text-white dark:text-gray-300 text-md md:text-xl font-semibold">
				{intro_1}
			</p>
			<p class="text-white dark:text-gray-300">
				{intro_2}
			</p>
		</div>
		<div
			class="mt-16 grid divide-x divide-y divide-gray-100 dark:divide-gray-700 overflow-hidden rounded-3xl text-gray-600 sm:grid-cols-2 lg:grid-cols-3 lg:divide-y-0 xl:grid-cols-3">
			<Card
				image={eco.src}
				title={title_description_1}
				href="/environmental-calculation"
				id="environmentalCalculation"
			/>
			<Card
				image={shield.src}
				title={title_description_2}
				href="/analysis-and-management"
			/>
			<Card
				image={leaf.src}
				title={title_description_3}
				href="/epd-reports"
			/>
		</div>
	</Container>
</div>

<style>
	#features {
		background: linear-gradient(
				180deg,
				rgba(0, 0, 0, 0.3) 0%,
				rgba(0, 0, 0, 0.1) 100%
			),
			url("../../img/farm2.webp");
		border-radius: 3rem;
		margin: 10rem 5%;
		background-size: cover;
		background-position: center;
		animation: reveal2 linear both;
		animation-timeline: view();
		animation-range: entry 10% cover 30%;
	}
	@keyframes reveal2 {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
	}
</style>

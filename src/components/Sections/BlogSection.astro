---
import Container from "../Container.astro";
import BlogCard from "../BlogCard.astro";
import blog1 from "../../img/esg.webp";
import blog2 from "../../img/cacta.webp";
import blog3 from "../../img/blog3.webp";

import { geti18n } from "../../i18n/";
const { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });

const { title, intro,  } = i18n.SECTION_BLOG;
const { post_1, post_2, post_3 } = i18n.SECTION_BLOG;
---

<div id="blog">
	<Container>
		<div class="mb-12 space-y-2 text-center">
			<h2
				class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">
				{title}
			</h2>
			<p
				class="lg:mx-auto lg:w-6/12 text-gray-600 dark:text-gray-300 text-pretty-paragraph">
				{intro}
			</p>
		</div>
		<div
			class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 blog-container w-full"
			id="blog-info">
			<BlogCard
				image={blog1}
				title={post_1.title}
				description={post_1.description}
			/>
			<BlogCard
				image={blog2}
				title={post_2.title}
				description={post_2.description}
			/>
			<BlogCard
				image={blog3}
				title={post_3.title}
				description={post_3.description}
			/>
		</div>
	</Container>
</div>

<style>
	#blog-info {
		animation: reveal linear both;
		animation-timeline: view();
		animation-range: entry 20% cover 40%;
	}
</style>

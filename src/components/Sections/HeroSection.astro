---
import bg from "../../icons/bg.svg";
import video from "../../video/videoResize2.mp4";
---

<div class="" id="home">
	<div class="max-w-7xl m-auto h-auto xl:h-screen px-6 md:px-12 xl:px-6 -z-5">
		<div class="pt-36 lg:pt-48 ml-auto">
			<div class="text-center m-auto top-0 bottom-0">
				<section class="flex w-full items-start flex-wrap">
					<div class="w-full md:w-1/2 relative">
						<img
							class="absolute w-auto md:max-w-[100%] let-0 top-0 bottom-0 m-auto brightness-200 -translate-x-32 svg"
							src={bg.src}
							alt="bg svg"
						/>
						<h1
							class="text-white dark:text-white font-bold text-start text-3xl md:text-4xl xl:text-7xl">
							Más que un <span
								class="text-primary text-3xl md:text-4xl xl:text-8xl"
								>Software</span
							>
							<p
								class="dark:text-white text-3xl md:text-4xl xl:text-4xl">
								La puerta al futuro de<br /> la industria agrícola.
							</p>
						</h1>

						<p
							class="mt-8 text-2xl font-semibold text-white dark:text-gray-300 text-start">
							Automatiza, calcula y reporta <br />el impacto
							ambiental <br />de tu empresa.
						</p>
					</div>
					<div
						class="absolute md:fixed top-0 left-0 -z-10 bg-black/90 container-video">
						<video
							class="object-cover h-[60vh] lg:h-full md:w-full bg-image"
							src={video}
							autoplay
							loop
							muted></video>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>

<style>

	.container-video {
		width: 100%;
		border-bottom-left-radius: 10% 5%;
		border-bottom-right-radius: 10% 5%;
		box-shadow: 0 0 20px 10px rgba(0, 0, 0, 0.2);
		animation: fadeOut linear both;
		animation-timeline: view();
		animation-range: 55% 85%;
	}
	.bg-image {
		mask: radial-gradient(circle at right, white 70%, transparent 100%);
		border-bottom-left-radius: 10% 5%;
		border-bottom-right-radius: 10% 5%;
		/* box shadow botton */
	}
	@media (width >= 768px) {
		@keyframes fadeOut {
			to {
				opacity: 0;
			}
		}
	}
</style>

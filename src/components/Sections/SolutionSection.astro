---
import Container from "../Container.astro";
import CardParallax from "../CardParallax/CardPallax.jsx";
import topWave from "../../img/waves-bg-top.svg";
import Gallery from "../Gallery.astro";
import lemon from "../../icons/lemon.svg";
import farm from "../../icons/farm.svg";

import { geti18n } from "../../i18n/";
const { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });

const {
	title,
	intro_1,
	intro_2,
	title_solution_1,
	description_solution_1,
	title_solution_2,
	description_solution_2,
	parallax_title,
	parallax_description,
	parallax_strong,
} = i18n.SECTION_SOLUTION;
---

<div id="solution" class="pt-10 lg:pt-32 relative">
	<img src={topWave.src} alt="top wave svg" class="w-full absolute right-0 top-0 dark:opacity-25 opacity-5 -z-10"/>
	<Container>
		<section class="flex flex-wrap justify-between items-center">
			<div class="w-full md:w-1/2">
				<h2
					class="text-3xl font-bold text-gray-900 md:text-4xl dark:text-white">
					{title}
				</h2>
				<p
					class="my-2 text-gray-600 dark:text-gray-300 text-md md:text-xl font-semibold">
					{intro_1}
				</p>
				<p class="my-2 text-gray-600 dark:text-gray-300">
					{intro_2}
				</p>
				<div
					class="divide-y space-y-4 divide-gray-100 dark:divide-gray-800">
					<div class="mt-8 flex gap-4 md:items-start">
						<div class="flex gap-4 text-green-600">
							<!-- <img
								class="w-8 m-auto"
								src={farm.src}
								alt="icon"
							/> -->
							✓
						</div>
						<div class="w-5/6">
							<h3
								class="font-semibold text-lg text-gray-700 dark:text-indigo-300">
								{title_solution_1}
							</h3>
							<p class="text-gray-500 dark:text-gray-400">
								{description_solution_1}
							</p>
						</div>
					</div>
					<div class="pt-4 flex gap-4 md:items-start">
						<div class="flex gap-4 text-green-600">
							<!-- <img
								class="w-8 m-auto"
								src={lemon.src}
								alt="icon"
							/> -->
							✓
						</div>
						<div class="w-5/6">
							<h3
								class="font-semibold text-lg text-gray-700 dark:text-teal-300">
								{title_solution_2}
							</h3>
							<p class="text-gray-500 dark:text-gray-400">
								{description_solution_2}
							</p>
						</div>
					</div>
				</div>
			</div>
			<CardParallax
				client:visible
				title={parallax_title}
				description={parallax_description}
				strong={parallax_strong}
			/>

			<!-- <Gallery /> -->
		</section>
	</Container>
</div>

<style>
	span {
		color: var(--primary);
	}
</style>

---
interface FeatureProps {
	title: string;
	description: string;
	image?: any;
	href: string;
}
const { title, description, image, href } = Astro.props;

import { getLangFromUrl, useTranslatedPath } from "../i18n/utils";

const { currentLocale } = Astro;
import { geti18n } from "../i18n/index.ts";

const i18n = geti18n({ currentLocale });

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const { button_read_more } = i18n.SECTION_FEATURES;
---

<div
	class="group relative bg-white dark:bg-gray-800 transition hover:z-[1] hover:shadow-2xl hover:shadow-gray-600/10">
	<div
		class="relative space-y-8 py-4 md:py-12 p-4 text-center flex justify-center flex-col items-center">
		<img src={image} class="w-10" alt="illustration" />

		<div class="space-y-2">
			<h5
				class="text-xl font-semibold text-gray-700 dark:text-white transition h-full">
				{title}
			</h5>
		</div>
		<a
			href={translatePath(href)}
			class="flex items-end justify-end group dark:text-white hover:text-green-700 dark:hover:text-green-700 transition font-bold">
			<span class="text-sm">{button_read_more}</span>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 24 24"
				fill="currentColor"
				class="w-4 h-4 -translate-x-6 text-2xl opacity-0 transition duration-300 group-hover:translate-x-2 group-hover:opacity-100">
				<path
					fill-rule="evenodd"
					d="M12.97 3.97a.75.75 0 011.06 0l7.5 7.5a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 11-1.06-1.06l6.22-6.22H3a.75.75 0 010-1.5h16.19l-6.22-6.22a.75.75 0 010-1.06z"
					clip-rule="evenodd"></path>
			</svg>
		</a>
	</div>
</div>

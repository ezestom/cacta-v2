---
import { ViewTransitions } from "astro:transitions";
import { AstroFont } from "astro-font";

import { geti18n } from "../i18n/";
const { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Ezequiel Stom" />
		<meta name="theme-color" content="#007d67" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logo.png" />

		<!-- <meta name="generator" content={Astro.generator} /> -->
		<meta
			name="Cacta Software"
			content="Cacta Software de sustentabilidad"
		/>
		<link rel="canonical" href="https://www.cacta.eco/" />
		<meta
			title="Cacta - Software para automatizar, calcular y reportar el impacto ambiental de tu empresa."
			content="Cacta Software"
		/>
		<meta property="og:url" content="https://www.cacta.eco/" />
		<meta
			name="description"
			property="og:description"
			content="Cacta es un software de gestión ambiental que ayuda a empresas a medir y reducir su impacto, optimizando la huella ecológica y el uso de recursos."
		/>
		<meta
			name="keywords"
			content="Cacta, Eco, Software, Medio Ambiente, Sostenibilidad, Innovación, Tecnología, App, Web, Desarrollo, Ambiental, Contaminación, Huella, Ecológica, Empresas, Industria, Medición, Monitoreo, Reducción, Impacto, Ambiental, Futuro, Sostenible, Eco-Consciente, Tecnología, Medición, Cambio, Significativo, CactaApp"
		/>
		<meta property="og:type" content="website" />

		<meta
			property="og:url"
			content="https://ezestom.github.io/portfolio/"
		/>
		<meta
			property="og:title"
			content="Cacta - Software para automatizar, calcular y reportar el impacto ambiental de tu empresa."
		/>
		<meta property="og:site_name" content="Cacta" />
		<meta property="og:image" content="/public/logo.png" />
		<!-- Twitter Card data -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@cacta_sas" />
		<meta
			name="twitter:title"
			content="Cacta - Software de Gestión Ambiental"
		/>
		<meta
			name="twitter:description"
			content="Cacta te permite calcular tu huella ecológica, gestionar tus residuos y medir tu consumo de recursos."
		/>
		<meta name="twitter:image" content="/public/logo.png" />
		<meta name="twitter:image:alt" content="/public/logo.png" />

		<title>{i18n.SEO_TITLE}</title>
		<ViewTransitions />
		<AstroFont
			config={[
				{
					src: [],
					name: "Cacta Software",
					preload: true,
					display: "swap",
					selector: "html",
					fallback: "sans-serif",
					googleFontsURL:
						"https://fonts.googleapis.com/css2?family=Inter&family=MedievalSharp&family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap",
				},
			]}
		/>
	</head>
	<body class="bg-[#fafafa] dark:bg-gray-900">
		<slot />
	</body>
</html>

<style>
	:root {
		--gradient1: linear-gradient(220.55deg, #00ff9a 0%, #007d67 100%);
		--gradient2: linear-gradient(220.55deg, #ff3e57 0%, #ffb979 100%);
	}
	html {
		scroll-behavior: smooth;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	body {
		margin: 0;
	}
	@keyframes reveal {
		from {
			opacity: 0.2;
			scale: 0.8;
			translate: 0 10%;
		}
	}
	/* view transition Api */
	::view-transition-new(root),
	::view-transition-old(root) {
		animation-duration: 0.3s;
	}
</style>

<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "SoftwareApplication",
		"name": "Cacta",
		"description": "Cacta es un software de gestión ambiental que permite a las empresas medir y reducir su impacto ambiental.",
		"applicationCategory": "BusinessApplication",
		"operatingSystem": "WEB",
		"url": "https://cacta.eco",
		"image": "https://cacta.eco/public/logo.png",
		"author": {
			"@type": "Organization",
			"name": "Cacta Software"
		},
		"offers": {
			"@type": "Offer",
			"url": "https://cacta.eco",
			"price": "0.00",
			"priceCurrency": "USD",
			"itemCondition": "https://schema.org/NewCondition",
			"availability": "https://schema.org/InStock"
		}
	}
</script>
